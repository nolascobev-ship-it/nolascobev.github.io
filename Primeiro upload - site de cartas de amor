    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('loveLetterForm');
            const confirmation = document.getElementById('confirmation');
            
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const recipient = document.getElementById('recipient').value;
                const title = document.getElementById('title').value;
                const message = document.getElementById('message').value;
                
                if (recipient && title && message) {
                    // Simular envio da carta
                    setTimeout(() => {
                        confirmation.classList.remove('hidden');
                        form.reset();
                        
                        // Esconder a confirmação após 3 segundos
                        setTimeout(() => {
                            confirmation.classList.add('hidden');
                        }, 3000);
                    }, 1000);
                }
            });

            // Efeito de digitação nas cartas existentes
            const loveCards = document.querySelectorAll('.love-card');
            loveCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Efeito de coração pulsante no header
            const logoImage = document.querySelector('.logo-image');
            setInterval(() => {
                logoImage.style.transform = 'scale(1.05)';
                setTimeout(() => {
                    logoImage.style.transform = 'scale(1)';
                }, 500);
            }, 2000);
        });
    </script>
